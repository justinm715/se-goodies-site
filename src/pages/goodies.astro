---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

const goodies = await Astro.glob("./goodies/*.mdx");
---

<Layout title="Goodies">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Goodies</Fragment>
      <Fragment slot="desc">Scripts and stuff.</Fragment>
    </Sectionhead>

    <section class="max-w-screen-xl mx-auto my-20">
      <ul>
        {
          goodies.map((g) => (
            <li key="foo" class="mb-10 border-b border-gray-200 pb-6">
              <h2 class="text-xl font-semibold text-gray-700 mb-2 hover:text-blue-600 transition">
                <a href={`${g.url}`}>{g.frontmatter.title}</a>
              </h2>
              <p class="text-gray-600">{g.frontmatter.description}</p>
            </li>
          ))
        }
      </ul>
    </section>
  </Container>
</Layout>
